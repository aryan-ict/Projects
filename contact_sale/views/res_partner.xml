<odoo>
    <record id="res_partner_contact_sale_view_buttons" model="ir.ui.view">
        <field name="name">res.partner.contact.sale.view.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="compute_contact_sale" icon="fa-list">
                    <field name="contact_sale_count" class="o_stat_value"/>
                    <span class="o_stat_text">Contact</span>
                    <span class="o_stat_text">Sale</span>
                </button>
            </div>
        </field>
    </record>
</odoo>